<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_height="match_parent"
    android:layout_width="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/openBattleToolbarphase1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

    <Button android:id="@+id/capture_second_round"
        android:layout_height="72dp"
        android:layout_width="match_parent"
        android:text="RÃ¼ckrunde aufnehmen!"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <ScrollView
        android:layout_below="@id/openBattleToolbarphase1"
        android:layout_above="@id/capture_second_round"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_marginLeft="16dp">

            <RelativeLayout
                android:layout_width="match_parent" android:layout_height="match_parent"
               >

                <TextView android:id="@+id/rapper1_round1text"
                    android:background="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:textSize="32sp"
                    android:text="HINRUNDE RAPPER X"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="10dp"
                    android:layout_alignRight="@+id/firstround_rapperx"
                    android:layout_alignEnd="@+id/firstround_rapperx"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:paddingLeft="5dp"
                    android:paddingTop="4dp" />

                <ImageView android:id="@+id/firstround_rapperx"
                    android:layout_width="match_parent"
                    android:src="@drawable/videoplaceholder"
                    android:layout_height="256dp"
                    android:layout_marginTop="15dp"
                    android:layout_below="@+id/rapper1_round1text"
                    android:layout_alignRight="@+id/firstrounde_rappery"
                    android:layout_alignEnd="@+id/firstrounde_rappery"
                    android:layout_marginBottom="15dp" />

                <TextView android:id="@+id/rapper2_round1text"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:textSize="32sp"
                    android:layout_below="@+id/firstround_rapperx"
                    android:background="@color/colorPrimary"
                    android:text="HINRUNDE RAPPER Y"
                    android:textColor="#FFFFFF"
                    android:layout_alignRight="@+id/firstround_rapperx"
                    android:layout_alignEnd="@+id/firstround_rapperx"
                    android:textStyle="bold"
                    android:paddingLeft="5dp"
                    android:paddingTop="4dp" />

                <ImageView android:id="@+id/firstrounde_rappery"
                    android:layout_below="@+id/rapper2_round1text"
                    android:src="@drawable/videoplaceholder"
                    android:layout_width="match_parent"
                    android:layout_height="256dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="16dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

            </RelativeLayout>

    </ScrollView>

</RelativeLayout>